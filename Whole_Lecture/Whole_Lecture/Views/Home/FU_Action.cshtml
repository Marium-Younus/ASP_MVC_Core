<form asp-action="FU_Action" asp-controller="Home" enctype="multipart/form-data">
    <div class="text-center">
        <h1 class="display-4">File Upload</h1>
        <div>
            <label for="formFileLg" class="form-label">Choose Image</label>
            <input class="form-control form-control-lg" id="formFileLg" type="file" name="image">
        </div>
       
        <div class="d-grid mb-3 mt-5">
            <input type="submit" value="Submit" class="btn btn-dark" />
        </div>
    </div>
    <div class="@ViewBag.value">
        <p>@ViewBag.message</p>
    </div>

</form>
